@{
  Layout = "_Layout";
}

@using GuitarTunings.Models;
@model List<Tuning>

<h1>Alternate Tunings</h1>

@if (Model.Count == 0)
{
  <p>No categories have been added</p>
}

@foreach (Tuning tuning in Model)
{
  <a asp-action="Details"
    asp-route-id="@tuning.TuningId">@tuning.Name</a>
  @* <h4>@Html.ActionLink($"{tuning.Name}", "Details", new { id = tuning.TuningId })</h4> *@
}
<br>

<h6><a asp-action="Create">Add new Alternate Tuning</a></h6>
