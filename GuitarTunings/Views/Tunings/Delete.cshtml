@{
  Layout = "_Layout";
}

@model GuitarTunings.Models.Tuning

<h2>Delete this Alternate Tuning</h2>
<h4>Alternate Tuning Name: <span>@Html.DisplayFor(model => model.Name)</span></h4>

<form asp-controller="Tunings" asp-action="Delete" method="post">
  <input type="hidden" asp-for="TuningId" />
  <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<br>
<a asp-controller="Tunings"
    asp-action="Details"
    asp-route-id="@Model.TuningId">Back to Details for: @Model.Name</a>
<br>
<br>
<h6><a asp-controller="Tunings"
    asp-action="Index">View All Alternate Tunings</a></h6>
<h6><a asp-controller="Home"
  asp-action="Index">Home</a></h6>