@{
  Layout = "_Layout";
}

@using GuitarTunings.Models;
@model List<TuningCategory> 

<h1>Search Results</h1>

@* @if (ViewBag.resultsTuningCategories.Count == 0 & ViewBag.resultsTunings.Count == 0 & ViewBag.resultsArtists.Count == 0 & ViewBag.resultsSongs.Count == 0)
{
  <p>No results from your search could be found</p>
