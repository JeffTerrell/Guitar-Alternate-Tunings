@{
  Layout = "_Layout";
}

@using GuitarTunings.Models;
@model List<TuningCategory>

<h1>Alternate Tuning Categories</h1>

@if (Model.Count == 0)
{
  <p>No categories have been added</p>
}

@foreach (TuningCategory tuningCategory in Model)
{
  <h4>@Html.ActionLink($"{tuningCategory.Name}", "Details", new { id = tuningCategory.TuningCategoryId })</h4>
}
<br>

<h6>@Html.ActionLink("Add new Category", "Create")</h6>