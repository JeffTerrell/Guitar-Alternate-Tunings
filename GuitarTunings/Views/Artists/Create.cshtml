@{
  Layout = "_Layout";
}

@using GuitarTunings.Models
@model Artist

<h1>Add a new artist</h1>

<form asp-controller="Artists" asp-action="Create" enctype="multipart/form-data" method="post">
  <ul>
  <li>
    <label asp-for="Name"></label>
    <input asp-for="Name" />
  </li>
  <li>
    <label asp-for="Genre"></label>
    <input asp-for="Genre" />
  </li>
  <li>
    <label asp-for="Description"></label>
    <input asp-for="Description", data-val="Required" />
  </li>
  <li>
    <label asp-for="ArtistImageName"></label>
    <input asp-for="ArtistImageFile" accept="image/*" />
  </li>
  <li>
    @Html.Label("Alternate Tuning")
    @Html.DropDownList("TuningId")
    @* <p>Alternate Tuning</p>
    <select asp-items="ViewBag.TuningId">
      <option>Please select an Alternate Tuning</option>
    </select>      *@
  </li>
  </ul>
  
  <input type="submit", value="Add", class="btn btn-dark"/>
</form>

<a asp-action="Index">Back to list of all Artists</a>